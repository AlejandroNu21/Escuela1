
@{ ViewData["Title"] = "MostrarAlumnos";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1 class="text-center">Mostrar Estudiantes</h1>
<br />
<button type="submit" class="btn btn-info animate_animated animate_backInDown"> @Html.ActionLink("Registrar Nuevo Estudiante", "SaveStudent", "Student")</button>
<br />
<br />
<table id="mitablastu" class="table table-dark table-hover">
    <thead>
        <tr>
            <th>LastName</th>
            <th>MidName</th>
            <th>Date</th>
            
            
        </tr>

    </thead>

</table>

@section scripts{

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>

        $(document).ready(function () {

            var tabla = $('#mitablastu').DataTable({
                "ajax": {
                    "url": '/Student/GetAllStudent',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "lastName", "name": "lastName", "autoWidth": true },
                    { "data": "firstMidName", "name": "firstMidName", "autoWidth": true },
                    { "data": "enrollmentsDate", "name": "enrollmentsDate", "autoWidth": true }
                   

                ]


            })
        })
    </script>

    
}

<button type="submit" class="btn btn-info animate_animated animate_backInDown"> @Html.ActionLink("INICIO", "Index","Home")</button>
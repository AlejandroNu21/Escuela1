@model Escuela.Dominio.Course
@{ ViewData["Title"] = "Indexdos";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<script src="https://kit.fontawesome.com/16bd784e77.js" crossorigin="anonymous"></script>
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.js">


@using (Html.BeginForm("Indexdos", "Course", FormMethod.Post))
{


<h2 class=" animate__animated animate__bounce"> Registre un curso</h2>
                <br />
                                <h3 class="text-center"> BIENVENIDO</h3>
                                                <br>
                                                                <i class="fas fa-book"></i>
                                                                                <label>Title</label>
                                                                                                <br />
                                                                                                                @Html.TextBoxFor(m => m.Title)
                                                                                                                                <br />
                                                                                                                                                @Html.ValidationMessageFor(m => m.Title)
                                                                                                                                                                <br />
                                                                                                                                                                                <br />
                                                                                                                                                                                                <i class="far fa-star"></i>
                                                                                                                                                                                                                <br />
                                                                                                                                                                                                                                <label>Credits</label>
                                                                                                                                                                                                                                                <br />
                                                                                                                                                                                                                                                                @Html.TextBoxFor(m => m.Credits)
                                                                                                                                                                                                                                                                                <br />
                                                                                                                                                                                                                                                                                                @Html.ValidationMessageFor(m => m.Credits)
                                                                                                                                                                                                                                                                                                                <br />
                                                                                                                                                                                                                                                                                                                                <br />
                                                                                                                                                                                                                                                                                                                                                <input type="submit" class="btn btn-success animate__animated animate__backInDown" value="GUARDAR" />
                                                                                                                                                                                                                                                                                                                                                                <br>
    <br />
                                                                                                                                                                                                                                                                                                                                                                                <button type="submit" class="btn btn-info animate_animated animate_backInDown"> @Html.ActionLink("Lista de Courses", "MostrarCourses", "Course")</button>
<br />
<br />
}



<script src="https://cdn.boomcdn.com/libs/wow-js/1.3.0/wow.js"></script>
<script type="text/javascript">
    new WOW().init();
</script>

